<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress Mahasiswa</title>
    <link rel="stylesheet" href="/css/progress-mahasiswa.css">
</head>
<body>

    <nav>
        <div class="back">
            <a href="javascript:void(0)" onclick="goBack()">
                <img src="/gambar/left.png" alt="">
            </a>
        </div>
        <div class="menu">
            <a href="" class="active">Belum Dikoreksi</a>
            <a href="">Riwayat Koreksi</a>
        </div>
    </nav>

    <div class="container">
        {{#each daftarProgress}}
        <div class="card">
            <img src="/gambar/dokumen icon.png" alt="">
            <h4>{{ this.subjek_dokumen }}</h4>
            <p>{{ this.nim }}</p>
            <p>{{ this.nama_mahasiswa }}</p>
            <a href="/progress/halaman-koreksi/{{this.id_dokumen}}"><button>Koreksi</button></a>
        </div>
        {{/each }}
    </div>

    <script>
        function goBack(){
            window.history.back();
        }
    </script>
    
</body>
</html>